/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.scroll-view-item{
    height: 100px;
    display: flex;
    flex-direction: row;
}

.scroll-view-item-left{
    display: flex;
    flex-direction: column;
    height: 100px;
    width: 150rpx;
    justify-content: center;
    padding-left:30px;
}

.scroll-view-item-right{
    display: flex;
    flex-direction: column;
    height: 100px;
    justify-content: center;
    padding-left:20px;
}

.scroll-view-item-line{
    height:100%;
    width:1px;
    background-color: #FFF
}

.add-circle {
    display: flex;
    position: absolute;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    background-color: #FF6666;
    margin-bottom: 10px;
    bottom: 20px;
    right:20px;
    justify-content: center;
    align-items: center;
}

.image-plus {
    width: 14px;
    height: 14px;
}